### Key bindings
#
# Basics:
#
    # launchers and switchers
    bindsym Mod4+d exec     'rofi -display-drun "Open an application" -show drun -show-icons'
    bindsym Mod4+s exec     'rofi -display-drun "Open an ssh session to" -show ssh -show-icons'
    bindsym $mod+d exec     'rofi -display-drun "Open an application" -show drun -show-icons'
    bindsym $mod+w exec     'THEME=$theme ~/git/sway/sway-rofi-scripts/sway-workspace-switcher.sh'
    bindsym $mod+m exec     'THEME=$theme ~/git/sway/sway-rofi-scripts/sway-mark-switcher.sh'
    bindsym Mod4+Tab   exec 'THEME=$theme ~/git/sway/sway-rofi-scripts/sway-tree-switcher.sh'
    bindsym Mod4+Space exec 'THEME=$theme ~/git/sway/sway-rofi-scripts/sway-tree-switcher.sh'
    bindsym Mod4+x     exec 'kitty -o remember_window_size=no -o initial_window_height=1000 -o initial_window_width=1000 --title "floating-term" nnn'

    # Start a terminal
    bindsym $mod+Return exec $term
    # Start a floating term
    bindsym Mod4+Return exec 'kitty -o remember_window_size=no -o initial_window_height=1000 -o initial_window_width=1000 --title "floating-term"'
    # Start a luakit instance
    bindsym Mod4+b exec 'luakit -U https://google.com'
    # Start a luakit open to gh notifications
    bindsym Mod4+g exec 'luakit -U https://github.com/notifications'

    # Screencap 
    bindsym $mod+Shift+r exec ~/.config/waybar/custom/wfrecord-record.sh
    bindsym $mod+Shift+x exec ~/.config/waybar/custom/wfrecord-stop.sh

    # Kill focused window
    bindsym $mod+Shift+q kill

    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right mouse button for dragging.
    floating_modifier $mod normal

    # Reload the configuration file
    bindsym $mod+Shift+c exec swaymsg reload; swaymsg "output eDP-1 enable"

    # Exit sway (logs you out of your Wayland session)
    bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'

    bindsym $mod+Shift+s exec grimshot --notify save output - | swappy -f -
    bindsym $mod+Shift+a exec grimshot --notify save area - | swappy -f -
    bindsym $mod+Shift+w exec grimshot --notify save window - | swappy -f -
#
# Moving around:
#
    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    # Or use $mod+[up|down|left|right]
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    # Move the focused window with the same, but add Shift
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
    # Move window to the desired workspace and switch to it via fzf
    bindsym $mod+c exec     'THEME=$theme ~/git/sway/sway-rofi-scripts/sway-window-move.sh'

    bindsym Mod4+Shift+$left  workspace prev 
    bindsym Mod4+Shift+$right workspace next

    # Move a workspace to focused monitor via fzf
    bindsym $mod+o exec     'THEME=$theme ~/git/sway/sway-rofi-scripts/sway-workspace-move.sh'

    # Move to previous container
    bindsym $mod+Shift+Tab focus prev sibling
#
# Workspaces:
#
    # Rename workspace
    bindsym $mod+r exec '~/git/sway/sway-rofi-scripts/sway-rename.sh'
    # Create and focus new workspace, if we provide cdpath opening workspaces
    # by their abbreviated paths will open a kitty terminal directly to it.
    set $cdpaths '/home/louis:/home/louis/vmmnt/:/home/louis/.config/nvim/after:/home/louis/git:/home/louis/git/go:/home/louis/git/gopath/src:/home/louis/git/gopath/src/github.com:/home/louis/git/gopath/src/github.com/ldelossa'
    bindsym $mod+n exec 'CDPATH=$cdpaths ~/git/sway/sway-rofi-scripts/sway-new-workspace.sh'
    # Set mark on window
    bindsym $mod+Shift+m exec '~/git/sway/sway-rofi-scripts/sway-mark.sh'

    # Switch to workspace
    bindsym Mod4+t workspace  terminal
    bindsym Mod4+w workspace  web
    bindsym Mod4+a workspace  apps
    bindsym Mod4+e workspace  ebooks
    bindsym Mod4+c workspace  chat
    bindsym Mod4+m workspace  music
    bindsym Mod4+v workspace  vm

    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+4 workspace number 4
    bindsym $mod+5 workspace number 5
 
    bindsym $mod+Tab workspace back_and_forth

    assign [title="Stats"]              workspace stats
    assign [app_id="pavucontrol"]       workspace sound
    assign [app_id="virt-manager"]      workspace vm
    assign [class="Signal"]             workspace chat
    assign [class="Vivaldi-stable"]     workspace web
    assign [app_id="vivaldi-stable"]    workspace web
    assign [app_id="firefox"]           workspace web
    assign [class="Lens"]               workspace apps
    assign [app_id="org.zealdocs.zeal"] workspace apps
    assign [class="obsidian"]           workspace notes

    # hack because spotify sucks.
    for_window [class="Spotify"]    move window to workspace music
    # send signal to waybar element so spotify widget opens
    for_window [class="Spotify"]    exec "sleep .1; pkill -RTMIN+4 waybar"

    # 1password should always float
    for_window [class="1Password"]      floating enable
    # anything with floating title floats.
    for_window [title="floating-*"]   floating enable

#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
    bindsym $mod+s layout stacking
    bindsym $mod+t layout tabbed
    bindsym $mod+e layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle
    bindsym $mod+Shift+f     floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+a focus parent
#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show
#
# Resizing containers:
#
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym Shift+$left resize shrink width 10px
    bindsym Shift+$down resize grow height 10px
    bindsym Shift+$up resize shrink height 10px
    bindsym Shift+$right resize grow width 10px

    bindsym $left resize shrink width 40px
    bindsym $down resize grow height 40px
    bindsym $up resize shrink height 40px
    bindsym $right resize grow width 40px

    # Ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Ctrl+BracketLeft mode "default"
}
bindsym mod4+r mode "resize"

#
# Status Bar:
#
bar {
        swaybar_command waybar
}

include /etc/sway/config.d/*
