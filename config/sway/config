exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway

font Cousine 11

### Variables
# Logo key. Use Mod1 for Alt.
set $mod Alt
# Home row direction keys, like vim
set $left   h
set $down   j
set $up     k
set $right  l

# include theme file here, this is a symlink to
# the current theme.
# sets $term, $wallpaper, $theme, and $mod+p (theme switch)
include ~/.config/sway/theme

# WOB
exec_always {
    ~/.config/sway/wob.sh
}

# WOB Volume Control
bindsym XF86AudioRaiseVolume exec amixer sset Master 5%+ | sed -En 's/.*\[([0-9]+)%\].*/\1/p' | head -1 > $SWAYSOCK.wob
bindsym XF86AudioLowerVolume exec amixer sset Master 5%- | sed -En 's/.*\[([0-9]+)%\].*/\1/p' | head -1 > $SWAYSOCK.wob
bindsym XF86AudioMute exec amixer sset Master toggle | sed -En '/\[on\]/ s/.*\[([0-9]+)%\].*/\1/ p; /\[off\]/ s/.*/0/p' | head -1 > $SWAYSOCK.wob

# WOB Brightness Control
bindsym XF86MonBrightnessDown exec brightnessctl set 5%- | sed -En 's/.*\(([0-9]+)%\).*/\1/p' > $SWAYSOCK.wob
bindsym XF86MonBrightnessUp exec brightnessctl set +5% | sed -En 's/.*\(([0-9]+)%\).*/\1/p' > $SWAYSOCK.wob

bindsym $mod+Shift+d exec brightnessctl set 5%- | sed -En 's/.*\(([0-9]+)%\).*/\1/p' > $SWAYSOCK.wob
bindsym $mod+Shift+u exec brightnessctl set +5% | sed -En 's/.*\(([0-9]+)%\).*/\1/p' > $SWAYSOCK.wob

# Notification Daemon
exec {
    ~/.config/sway/swaync.sh
}

# # Toggle control center
bindsym $mod+Shift+n exec swaync-client -t -sw

# Toggle waybar
bindsym $mod+Shift+b exec killall -SIGUSR1 waybar

# Appearance
gaps top    0
gaps bottom 0
gaps left 0
gaps right 0
gaps inner 5
default_border pixel 3
for_window [class=".*"]     opacity 1
for_window [app_id=".*"]    opacity 1 
smart_gaps off
smart_borders on

### Monitor Layout
### view with swaymsg -t get_outputs

set $center_dp 'Unknown M32UC 22110B004728'
set $right_dp  'Goldstar Company Ltd LG HDR 4K 0x0000BFEC'

workspace chat output eDP-1
workspace stats output eDP-1

workspace music output $center_dp
workspace apps output $center_dp
workspace vm output $center_dp
workspace terminal output $center_dp

workspace notes  output $right_dp
workspace web    output $right_dp

output eDP-1        bg  $wallpaper stretch
output $center_dp   bg  $wallpaper stretch
output $right_dp    bg  $wallpaper fill

output eDP-1 pos  0 0 res 2560x1600
output $center_dp pos 2560 0 res 3840x2160 
output $center_dp scale 1.2
output $right_dp  pos 5750 0 res 3840x2160
output $right_dp transform 90
output $right_dp scale 1.2

exec_always ~/.config/sway/clamshell.sh

bindswitch --reload --locked lid:on output eDP-1 disable
bindswitch --reload --locked lid:off output eDP-1 enable

bindsym $mod+Shift+o exec swaymsg "output * enable"

### Lock screen
bindsym Mod4+l exec gtklock -d

## Output configuration
#
# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
#
# Example configuration:
#
#   output HDMI-A-1 resolution 1920x1080 position 1920,0
#
# You can get the names of your outputs by running: swaymsg -t get_outputs

### Idle configuration
#
# Example configuration:
#
exec swayidle -w \
         timeout 600   'gtklock -d' \
         timeout 1200  'swaymsg "output * dpms off"' \
         resume        'swaymsg "output * dpms on"' \
         before-sleep  'gtklock -d' 

# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.

### Input configuration
#
# Example configuration:
#
#   input "2:14:SynPS/2_Synaptics_TouchPad" {
#       dwt enabled
#       tap enabled
#       natural_scroll enabled
#       middle_emulation enabled
#   }
#
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

input "1:1:AT_Translated_Set_2_keyboard" {
    xkb_options ctrl:nocaps          
}
input "2:10:TPPS/2_Elan_TrackPoint" {
   pointer_accel    .5
   accel_profile "flat" 
}
